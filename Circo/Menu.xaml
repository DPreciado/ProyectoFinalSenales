<UserControl x:Class="Circo.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Circo"
             mc:Ignorable="d" Height="711" Width="1387.3">
    <Grid x:Name="gridMenu">
        <Grid.Background>
            <ImageBrush ImageSource="recursos/InicioJuego-01.jpg"/>
        </Grid.Background>
        <Button x:Name="btnInicio" Margin="504,399,427,0" VerticalAlignment="Top" Width="456" Click="btnInicio_Click" Height="121" BorderThickness="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Style="{DynamicResource ButtonStyle1}">
            <Button.Background>
                <ImageBrush ImageSource="recursos/btnStart.png" Stretch="UniformToFill"/>
            </Button.Background>

        </Button>
        <Button x:Name="btnSalir" Margin="504,525,427,0" VerticalAlignment="Top" Width="456" Height="121" BorderThickness="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Click="btnSalir_Click" Style="{DynamicResource ButtonStyle1}">
            <Button.Background>
                <ImageBrush ImageSource="recursos/btnExit.png" Stretch="UniformToFill"/>
            </Button.Background>

        </Button>

    </Grid>
</UserControl>
